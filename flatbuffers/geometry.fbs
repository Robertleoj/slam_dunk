include "gmath.fbs";

namespace slamd.flatb;

table Triad {
    scale: float;
    thickness: float;
}

table Circles2D {
    positions: [Vec2];
    colors: [Vec3];
    radii: [float];
    thickness: float;
}

union GeometryUnion {
    triad: Triad,
    circles_2d: Circles2D
}

table Geometry {
    geometry: GeometryUnion;
}

